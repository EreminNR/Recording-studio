<Page x:Class="Recording_studio.admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recording_studio"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="admin">

    <Grid Background="#FF27262C">
        <Button Content="Пользовтели" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Width="280" Background="#FF27262C" Foreground="White" BorderBrush="#FF27262C" FontFamily="Courier New" FontSize="20">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="Услуги" HorizontalAlignment="Center" VerticalAlignment="Top" Height="68" Width="280" Background="#FF27262C" Foreground="White" BorderBrush="#FF27262C" FontFamily="Courier New" FontSize="20" Click="Button_Click_1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        
        <DataGrid x:Name="MyData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,73,0,0" Background="#FF27262C"/>

    </Grid>
</Page>
